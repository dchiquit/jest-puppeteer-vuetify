{
  "compilerOptions": {
    "declaration": true,
    "outDir": "./lib",
    "target": "ES5",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true
  },
  "include": [
    "./src/**/*"
  ]
}
